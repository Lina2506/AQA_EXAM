<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AQA_EXAM suite">
    <!--Critical Tests Suite-->
    <test name="Critical UI Tests" preserve-order="true">
        <groups>
            <run>
                <include name="critical"/>
            </run>
        </groups>
        <classes>
            <class name="ui.CriticalTests"/>
        </classes>
    </test>
    <!-- Extended Tests Suite -->
    <test name="Extended UI Tests" preserve-order="true">
        <groups>
            <run>
                <include name="extended"/>
            </run>
        </groups>
        <classes>
            <class name="ui.ExtendedTests"/>
        </classes>
    </test>

    <!-- API Tests Suite -->
    <test name="API Test" preserve-order="true">
        <groups>
            <run>
                <include name="api"/>
            </run>
        </groups>
        <classes>
            <class name="api.ApiSystemTest"/>
        </classes>
    </test>
</suite>