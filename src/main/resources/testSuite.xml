<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AQA_EXAM suite">
    <test name="Critical Tests">
        <groups>
            <run>
                <include name="critical"/>
            </run>
        </groups>
        <packages>
            <package name="ui"/>
        </packages>
    </test>
    <test name="Extended Tests">
        <groups>
            <run>
                <include name="extended"/>
            </run>
        </groups>
        <packages>
            <package name="ui"/>
        </packages>
    </test>
    <test name="API Test">
        <packages>
            <package name="api"/>
        </packages>
    </test>
</suite>